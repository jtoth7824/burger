<image src="./assets/img/burger.png"></image>

<h1>Eat-Da-Burger!</h1>

<div class="container">
  <div class="row">
<div class="card">
  <div class="card-title">
<h2>Burgers that are available to be eaten!</h2>
  </div>
  <div class="card-body">
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burger-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>
  </div>
</div> 

<div class="card">
  <div class="card-title">
<h2>Burgers that are devoured!</h2>
  </div>
  <div class="card-body">
<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>
  </div>
</div>
</div>

<div class="row">
<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devoured?</label><br>
    <input type="radio" name="devour" value="1" id="devoured" checked> Devoured!<br>
    <input type="radio" name="devour" value="0" id="available"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>